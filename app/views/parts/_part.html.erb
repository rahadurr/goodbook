<div class="accordion mt-3" id="part-<%= @part.id %>">
  <div class="accordion-item">
    <h2 class="accordion-header" id="heading<%= @part.id %>">
      <button class="accordion-button" type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapse-<%= @part.id %>"
              aria-expanded="true"
              aria-controls="collapse-<%= @part.id %>">
        <%= @part.title %>
      </button>
    </h2>
    <div id="collapse-<%= @part.id %>" class="accordion-collapse collapse show"
         aria-labelledby="heading<%= @part.id %>"
         data-bs-parent="#part-<%= @part.id %>">

      <div class="accordion-body p-0">
        <div class="list-group">
        </div>
      </div>
    </div>
  </div>
</div>